#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/nishimoridaisuke/dev/projects/pingblog" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/nishimoridaisuke/dev/projects/pingblog")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/nishimoridaisuke/dev/projects/pingblog" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/nishimoridaisuke/dev/projects/pingblog/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/nishimoridaisuke/dev/projects/pingblog/.envrc" "/Users/nishimoridaisuke/dev/projects/pingblog/.direnv"/*.rc
